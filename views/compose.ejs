<%- include("partials/header"); %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="posttitle" required>
      </div>
      <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" rows="5" name="postbody" required></textarea>
      </div>
      <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") %>